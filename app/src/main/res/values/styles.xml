<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/doom</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#ffff</item>
    </style>

    <style name="Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Title.White" parent="Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title.Black" parent="Title">
        <item name="android:textColor">@color/soft_black</item>
    </style>

    <style name="Title.Black.DOS" parent="Title.Black">
        <item name="android:fontFamily">@font/dosfont</item>
    </style>

    <style name="Title.White.DOS" parent="Title.White">
        <item name="android:fontFamily">@font/dosfont</item>
    </style>

    <style name="Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body.Black" parent="Body">
        <item name="android:textColor">@color/soft_black</item>
    </style>

    <style name="Body.White" parent="Body">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body.Black.DOS" parent="Body.Black">
        <item name="android:fontFamily">@font/dosfont</item>
    </style>

    <style name="Body.White.DOS" parent="Body.White">
        <item name="android:fontFamily">@font/dosfont</item>
    </style>

</resources>
